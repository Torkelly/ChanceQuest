@model IEnumerable<ChanceQuest.Entities.Player>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeasantHappiness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NobleHappiness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoyalHappiness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavorableStatId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeasantHappiness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NobleHappiness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoyalHappiness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavorableStatId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
