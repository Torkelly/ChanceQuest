@model ChanceQuest.Models.CreatePlayerCommand

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CreatePlayerCommand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CharacterName" class="control-label"></label>
                <input asp-for="CharacterName" class="form-control" />
                <span asp-validation-for="CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FavorableStatId" class="control-label"></label>
                <input asp-for="FavorableStatId" class="form-control" />
                <span asp-validation-for="FavorableStatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" asp-action="Play"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Play">Back to Game</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
